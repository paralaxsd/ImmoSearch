@page "/notifications"
@using ImmoSearch.Web.Models
@using System.Text.Json
@using System.Text.Json.Serialization
@using Microsoft.JSInterop

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="d-flex align-items-center mb-3">
            <h5 class="mb-0">Browser-Benachrichtigungen</h5>
            <span class="badge bg-secondary ms-2">Web Push</span>
        </div>
        @if (!_webPushEnabled)
        {
            <div class="alert alert-warning" role="alert">WebPush ist nicht konfiguriert.</div>
        }
        else
        {
            <div class="d-flex gap-2 flex-wrap">
                <button class="btn btn-outline-primary" @onclick="EnablePush" disabled="@_busy">@_buttonText</button>
                @if (_isSubscribed)
                {
                    <button class="btn btn-outline-success" @onclick="SendTestPush" disabled="@_busy">Test-Push senden</button>
                }
                @if (!string.IsNullOrWhiteSpace(_status))
                {
                    <span class="text-muted align-self-center">@_status</span>
                }
            </div>
        }
    </div>
</div>

@code {
    sealed record SubscriptionData(
        [property: JsonPropertyName("endpoint")] string Endpoint,
        [property: JsonPropertyName("p256dh")] string P256dh,
        [property: JsonPropertyName("auth")] string Auth);

    bool _webPushEnabled;
    string? _webPushPublicKey;
    string _status = string.Empty;
    bool _busy;
    bool _isSubscribed;
    string _buttonText => _isSubscribed ? "Deaktivieren" : "Aktivieren";
    SubscriptionData? _subscription;

    [Inject] StatusApiClient StatusClient { get; set; } = default!;
    [Inject] ListingApiClient ApiClient { get; set; } = default!;
    [Inject] IJSRuntime JS { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadConfig();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckSubscription();
        }
    }

    async Task CheckSubscription()
    {
        try
        {
            var permission = await JS.InvokeAsync<string>("eval", "Notification.permission");
            if (permission != "granted")
            {
                _isSubscribed = false;
                _subscription = null;
                await JS.InvokeVoidAsync("eval", "localStorage.removeItem('webPushSubscription')");
                return;
            }

            var subJson = await JS.InvokeAsync<string>("eval", "localStorage.getItem('webPushSubscription')");
            if (!string.IsNullOrWhiteSpace(subJson))
            {
                await JS.InvokeVoidAsync("console.log", $"subJson: {subJson}");
                _subscription = JsonSerializer.Deserialize<SubscriptionData>(subJson);
                await JS.InvokeVoidAsync("console.log", $"Deserialized: {_subscription}");
                _isSubscribed = _subscription is not null && !string.IsNullOrWhiteSpace(_subscription.Endpoint);
                await JS.InvokeVoidAsync("console.log", $"Subscription loaded: {_isSubscribed}, Endpoint: {_subscription?.Endpoint}");
            }
            else
            {
                await JS.InvokeVoidAsync("console.log", "No subscription in localStorage");
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("console.log", $"CheckSubscription error: {ex.Message}");
        }
    }

    async Task LoadConfig()
    {
        try
        {
            var cfg = await StatusClient.GetConfigStatusAsync();
            _webPushEnabled = cfg?.WebPushEnabled == true;
            _webPushPublicKey = cfg?.WebPushPublicKey;
            _status = string.Empty;
        }
        catch
        {
            _webPushEnabled = false;
            _webPushPublicKey = null;
            _status = "Konfiguration nicht verfügbar.";
        }
    }

    async Task EnablePush()
    {
        if (!_webPushEnabled || string.IsNullOrWhiteSpace(_webPushPublicKey))
        {
            _status = "WebPush nicht konfiguriert.";
            return;
        }

        _busy = true;
        try
        {
            if (_isSubscribed && _subscription is not null && !string.IsNullOrWhiteSpace(_subscription.Endpoint))
            {
                // Deaktivieren
                var response = await ApiClient.UnsubscribePushAsync(_subscription.Endpoint);
                if (response.IsSuccessStatusCode)
                {
                    _isSubscribed = false;
                    _subscription = null;
                    await JS.InvokeVoidAsync("eval", "localStorage.removeItem('webPushSubscription')");
                    _status = "WebPush deaktiviert. Hinweis: Die Browser-Permission bleibt bestehen. Entfernen Sie sie manuell in den Browser-Einstellungen, um den Dialog beim nächsten Aktivieren zu sehen.";
                }
                else
                {
                    _status = $"Deaktivierung fehlgeschlagen (Status: {response.StatusCode}).";
                }
            }
            else
            {
                // Aktivieren
                var ok = await JS.InvokeAsync<bool>("immoPush.register", _webPushPublicKey, ApiClient.BaseAddress);
                if (ok)
                {
                    await CheckSubscription(); // Nach Aktivieren neu prüfen
                    _status = "WebPush aktiviert.";
                }
                else
                {
                    _status = "Aktivierung fehlgeschlagen.";
                }
            }
        }
        catch (JSException ex)
        {
            _status = $"JS-Fehler: {ex.Message}";
        }
        catch (Exception ex)
        {
            _status = $"Deaktivierung fehlgeschlagen: {ex.Message}";
        }
        finally
        {
            _busy = false;
        }
    }

    async Task SendTestPush()
    {
        _busy = true;
        try
        {
            var ok = await ApiClient.SendTestPushAsync();
            _status = ok ? "Test-Push gesendet." : "Test-Push fehlgeschlagen.";
        }
        catch
        {
            _status = "Test-Push fehlgeschlagen.";
        }
        finally
        {
            _busy = false;
        }
    }
}
