@page "/"

<h1>Listings</h1>

<div class="mb-3 d-flex gap-2 align-items-center">
    <button class="btn btn-primary" @onclick="Refresh" disabled="@_loading">Refresh</button>
    <span class="text-muted">Page @_page / @(_totalPages == 0 ? 1 : _totalPages)</span>
</div>

@if (_loading)
{
    <p>Loading...</p>
}
else if (_error)
{
    <p class="text-danger">Failed to load listings.</p>
}
else if (_result?.Items?.Count == 0)
{
    <p>No listings found.</p>
}
else if (_result is not null)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>City</th>
                <th>Price</th>
                <th>Size</th>
                    <th>Rooms</th>
                    <th>First seen</th>
                    <th>Last seen</th>
                <th>Source</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in _result.Items)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.City</td>
                <td>@(item.Price.HasValue ? item.Price.Value.ToString("C0") : "–")</td>
                <td>@(item.Size.HasValue ? $"{item.Size:F0} m²" : "–")</td>
                    <td>@(item.Rooms.HasValue ? $"{item.Rooms:F1}" : "–")</td>
                    <td>@item.FirstSeenAt.ToString("yyyy-MM-dd")</td>
                    <td>@item.LastSeenAt.ToString("yyyy-MM-dd")</td>
                <td>@item.Source</td>
                <td><a href="@item.Url" target="_blank">Open</a></td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-outline-secondary" @onclick="Prev" disabled="@(_page <= 1)">Prev</button>
        <span>@_result.TotalCount total</span>
        <button class="btn btn-outline-secondary" @onclick="Next" disabled="@(_page >= _totalPages)">Next</button>
    </div>
}

@code {
    private readonly int _pageSize = 20;
    private int _page = 1;
    private int _totalPages = 1;
    private bool _loading;
    private bool _error;
    private PagedResult<Listing>? _result;

    [Inject]
    public ListingApiClient ApiClient { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadPage(_page);
    }

    private async Task LoadPage(int page)
    {
        _loading = true;
        _error = false;
        StateHasChanged();

        try
        {
            _result = await ApiClient.GetListingsAsync(page, _pageSize);
            if (_result is null)
            {
                _error = true;
                return;
            }

            _page = page;
            _totalPages = (int)Math.Ceiling((double)_result.TotalCount / _result.PageSize);
            if (_totalPages == 0) _totalPages = 1;
        }
        catch
        {
            _error = true;
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private Task Refresh() => LoadPage(_page);

    private Task Prev()
    {
        if (_page > 1)
        {
            return LoadPage(_page - 1);
        }
        return Task.CompletedTask;
    }

    private Task Next()
    {
        if (_page < _totalPages)
        {
            return LoadPage(_page + 1);
        }
        return Task.CompletedTask;
    }
}
