@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.Extensions.Options
@using ImmoSearch.Web.Options
@using ImmoSearch.Web.Models
@using ImmoSearch.Web.Services
@implements IDisposable

<PageTitle>ImmoSearch</PageTitle>

<div class="page">
    <div class="sidebar @(_menuOpen ? "show" : string.Empty)">
        <NavMenu />
    </div>

    <main>
        @if (_menuOpen)
        {
            <div class="sidebar-overlay" @onclick="CloseMenu"></div>
        }

        <div class="top-row px-4">
            <div class="d-flex align-items-center gap-2">
                <button class="btn btn-outline-secondary"
                        @onclick="ToggleMenu"
                        aria-label="Toggle navigation">
                    @(_menuOpen ? "✕" : "☰")
                </button>
                <div class="top-title">@_heading</div>
            </div>
            <div class="d-flex align-items-center gap-3">
                <a href="https://github.com/paralaxsd/ImmoSearch" target="_blank">GitHub</a>
                <PiInfo />
            </div>
        </div>

        @if (!_configOk)
        {
            <div class="alert alert-warning m-3" role="alert">
                @_appInfo.WarningMessage
                @if (_missing?.Length > 0)
                {
                    <ul class="mb-0 mt-2">
                        @foreach (var item in _missing)
                        {
                            <li>@item</li>
                        }
                    </ul>
                }
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    string _heading = "ImmoSearch";
    bool _menuOpen;
    bool _configOk = true;
    AppInfoOptions _appInfo = new();
    string[]? _missing;

    [Inject] NavigationManager Nav { get; set; } = default!;
    [Inject] IOptions<AppInfoOptions> AppInfo { get; set; } = default!;
    [Inject] StatusApiClient StatusClient { get; set; } = default!;


    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }

    protected override async Task OnInitializedAsync()
    {
        _appInfo = AppInfo.Value;
        Nav.LocationChanged += OnLocationChanged;

        try
        {
            var status = await StatusClient.GetConfigStatusAsync();
            if (status is null)
            {
                _configOk = false;
                _missing = new[] { "Configuration status unavailable" };
                return;
            }

            _configOk = status.NotificationsConfigured;
            _missing = status.Missing.Length > 0 ? status.Missing : null;
        }
        catch
        {
            _configOk = false;
            _missing = new[] { "Configuration status unavailable" };
        }
    }

    protected override void OnParametersSet()
    {
        var path = Nav.ToBaseRelativePath(Nav.Uri).Trim('/').ToLowerInvariant();
        _heading = path switch
        {
            "admin" => "Admin",
            "notifications" => "Notifications",
            "" => "Listings",
            _ => "ImmoSearch"
        };
    }

    void OnLocationChanged(object? sender, LocationChangedEventArgs args)
    {
        _menuOpen = false;
        InvokeAsync(StateHasChanged);
    }

    void ToggleMenu() => _menuOpen = !_menuOpen;

    void CloseMenu() => _menuOpen = false;
}
